@import url("https://fonts.googleapis.com/css?family=Inconsolata|Source+Sans+Pro:300,400,600")
html,
body
  height: 100%
  margin: 0

body
  font-family: 'Source Sans Pro', 'Helvetica Neue', 'Helvetica', sans-serif
  padding: 0

body *
  font-weight: 300

section
  height: 100vh

h1
  font-size: 54px
  margin-bottom .25em

h3
  font-weight: 600
  font-size: 1.5em
  margin: 0.75em 0

p
  font-family: 'Inconsolata', monospace
  font-size: 18px
  line-height: 110%
  margin: 0

a
  color: inherit
  transition font-weight 250ms, color 250ms
  text-decoration: none

ul
  list-style-type: none
  padding: 0

p.sans
  font-family: inherit




#toast
  visibility: hidden
  max-width: 350px
  background-color: #d3d3d3
  border-radius: 5px
  padding: 0.75em
  position: fixed
  z-index: 4
  left: 2em
  top: 30px
  display: flex
  align-items: center
  justify-content: space-around
  span
    &:first-of-type
      text-align: center
      font-size: 3em
    &:last-of-type
      padding: 0 1em
  &.show
    visibility: visible
    animation: toastin 3s, toastout 3s 4s

.logo-wrapper
  margin: 0
  width: 100%
  height: 100%
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  animation: fadein 3.5s
  .logo
    width: 60vw
    height: auto
    padding: 0
    margin: 0
  .social
    list-style none
  .link
    display inline-block
    margin-right 1.5vw
    max-width 50px
    a
      &:hover
        color lighten(black, 25%)
    &:last-of-type
      margin-right 0
    .anchor
      height 3em
      width 50px
      display inline-block
      margin-left -15px
      background url('anchor-icon.png') center/70% no-repeat
      transition background 250ms
      &:hover
        background url('anchor-icon-hover.png') center/70% no-repeat




.one-quarter
  flex: 1 25%

.one-third
  flex: 1 33.3333%

.half
  flex: 1 50%

.two-thirds
  flex: 1 66.6666%

.three-quarters
  flex: 1 75%

.full
  flex: 1 100%

.last
  order: 9999

.first
  order: 1

.right
  right: 0

.text-center
  text-align: center

.text-right
  text-align: right

.top
  align-self: flex-start

.middle
  align-self: center

.bottom
  align-self: flex-end

#toTop
  position: fixed
  font-weight: 200
  top: 0
  left: 50%
  transform: translateX(-50%)
  color: #a9a9a9
  opacity: 0
  transition: opacity 300ms ease-in-out
  cursor: pointer
  z-index: 1

#menuButton
  width: 1.75em
  height: 20px
  position: fixed
  z-index: 5
  right: 20px
  top: 1em
  transform: rotate(0deg)
  cursor: pointer
  transition: transform 300ms, top 300ms, left 300ms, width 300ms
  span
    display: block
    position: absolute
    height: 2px
    width: 100%
    background: #000
    border-radius: 9px
    opacity: 1
    left: 0
    transform: rotate(0deg)
    transition: 0.25s ease-in-out
    &:nth-of-type(1)
      top: 0px
    &:nth-of-type(2),
    &:nth-of-type(3)
      top: 8px
    &:nth-of-type(4)
      top: 16px
  &.open
    span
      &:nth-of-type(1)
        top: 8px
        left: 50%
        width: 0
      &:nth-of-type(2)
        transform: rotate(45deg)
      &:nth-of-type(3)
        transform: rotate(-45deg)
      &:nth-of-type(4)
        top: 8px
        left: 50%
        width: 0


#sidebar
  position: fixed
  height: 100vh
  width: 15em
  right: calc(-15em + 65px)
  z-index: 2
  background-color: #d3d3d3
  transition: right 300ms
  ul
    margin-top: calc(1em + 45px)
    margin-left: 65px
  li
    cursor: pointer
    font-size: 1.5em
    margin-bottom: 0.25em
    &:hover
      font-weight: 600
  &.open
    right: 0

.graphic
  display: flex
  flex-direction: column
  align-items: center
  > *
    width: 20em
  img
    margin-bottom: 1em
  p
    text-align: center
    padding: 0 1em
    margin: 0
    font-size: 0.9em

.content-box
  margin: 0
  padding: 0 15vw
  display: flex
  justify-content: space-between
  align-items: center
  &:nth-of-type(2n)
    background-color: #f6f6f6
  > *
    max-height: 80%
    padding: 2em

.content
  flex: 1
  overflow: hidden
  position: relative
  i
    color: #fa8072
    margin-right: 1em
    text-align: center
  p:after
    content: '\A\A'
    white-space: pre

.title
  display: flex
  justify-content: space-between
  align-items: center

#portfolio h2
  margin-bottom 5vh

.examples
  display flex
  justify-content space-between
  flex-wrap wrap
  .example
    flex 1 23.5%
    margin 5vh 2% 0 0
    display flex
    flex-direction column
    position relative
    &:first-of-type
      margin-left 0
    img
      max-width 100%
      display block
      height 25vh
    .text
      position absolute
      right 0
      left 0
      top 0
      bottom 0
      justify-content center
      align-items center
      color white
      font-weight 700
      font-size 24px
      display flex
      flex-direction column
      opacity 0
      transition opacity 250ms
      background-color rgba(black, .8)
      .theme-pink
        &.bar
          background-color #EF2672
          width 0
          height 2px
          transition width 300ms 50ms
      h4
        margin 0 0 5px 0
    &:hover
      .text
        opacity 1
      .theme-pink
        &.bar
          width 90%


@media only screen and (max-width: 1000px)
  .content-box
    flex-direction: column
    height: unset
    margin: 0
    padding-top: 15vw
    > *
      padding: unset

  .content
    overflow: unset
    text-align: center
    padding: 0 5vw 10vh
    i
      margin-bottom: 18px
      margin-right: unset
      order: -9999

  .title
    flex-direction: column


  .graphic
    order: -100
    img
      border-radius: 0

@media only screen and (max-width: 450px)
  #toast
    visibility: hidden
    max-width: 100vw
    top: 0
    left: unset
    margin: 0
    padding: 5vh 5vw
    border-radius: 0
    &.show
      visibility: visible
      animation: toastinmobile 3s, toastoutmobile 3s 4s

  .social
    .link
      margin-right 1.5vw
      &:last-of-type
        margin-right 0

  .logo-wrapper 
    img
      width: 75vw
      height: auto
    a
      margin-right: 10vw

  #sidebar
    right: -100vw
    width: 100vw
    > ul
      text-align: right
      margin-right: calc(15vw + 1.75em)
    &.open
      right: 0

  #menuButton
    right: 5vw

  #toTop
    top: -15px
  
  .examples
    .example
      margin-left 0


@keyframes fadein
  from
    opacity: 0
  to
    opacity: 1

@keyframes movedown
  0%
    top: -2em
  100%
    top: 1em

@keyframes toastin
  from
    right: 0
    opacity: 0
  to
    right: 2em
    opacity: 1

@keyframes toastinmobile
  from
    transform: translateY(-100%)
    opacity: 0
  to
    transform: translateY(0)
    opacity: 1

@keyframes toastout
  from
    left: 2em
    opacity: 1
  to
    left: 0
    opacity: 0

@keyframes toastoutmobile
  from
    transform: translateY(0)
    opacity: 1
  to
    transform: translateY(-100%)
    opacity: 0
